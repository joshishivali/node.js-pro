<body>  
    <div align="center">
        <h1>Edit Task</h1>
            <form action="/updateUser" method="post" class="col-5">
                <input type="hidden" name="editid" value="<%= single.id %>">
                <label for="">Task:-</label>
                <input type="text" name="task" value="<%= single.task %>" class="w-100">
                <br><br>
                <label for="">status:-</label>
                <input type="text" name="status" value="<%= single.status %>" class="w-100">
                <br><br>
                <label for="">Deadline:-</label>
                <input type="datetime-local" name="date" value="<%= single.date %>" class="w-100">
                <br><br>
                <input type="submit">
            </form>
    </div>
